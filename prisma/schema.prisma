generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(cuid())
  name     String     @unique
  email    String     @unique
  role     String
  password String
  Reminder Reminder[]
  Token    Token?
}

model Teacher {
  id             String  @id @default(cuid())
  name           String  @unique
  specialization String?
  asignature     String?
  description    String?
  contact        String?
}

model Event {
  id         String     @id @default(cuid())
  title      String
  date       String
  startTime  String
  finishTime String
  Reminder   Reminder[]
}

model Reminder {
  id      String @id @default(cuid())
  userId  String
  eventId String
  user    User   @relation(fields: [userId], references: [email])
  event   Event  @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
}

model Token {
  id     String @id @default(cuid())
  token  String
  userId String @unique
  user   User   @relation(fields: [userId], references: [email])
}
